@{
  Layout = "_Layout";
}

@using DocOffice.Models;
@model List<DocOffice.Models.Doctor>;

<h1>Items</h1>

@if (@Model.Count == 0)
{
  <h3>No items have been added yet!</h3>
} 

@foreach (Doctor doctor in Model)
{
  <li>@Html.ActionLink($"{doctor.Name}", "Details", new { id = doctor.DoctorId })</li>
}

<p>@Html.ActionLink("Add new item", "Create")</p>